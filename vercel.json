{
    "version": 2,
    "builds":[ 
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "dist" }
        },
        {
            "src": "package.json",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "client/$1" },
        { "src": "/api/(.*)", "dest": "/src/$1" }
    ]
}